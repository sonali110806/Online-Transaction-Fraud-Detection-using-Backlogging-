<% layout("/layouts/boilerplate") %>
<body>
    <h3>Product Summary </h3>
    <form action="/listings/<%= listing._id %>/pay" method="POST">
    <p class = "product-summary">
    <p>
        <img src="<%= listing.image.url %>" alt="Product Image" width="200" height="200">
    </p>
    <p>Product Name: <%= listing.name %></p>
    <p>Price: $<%= listing.price %></p>
    <p>Quantity: 1</p>
    <p>Total Amount : &#8377; <%= listing.price.toLocaleString("en-IN")%></p>
</p>
<br> <br> <br>
 <div class="user-info">
     <h4>Customer Details</h4>  
    <input type="text" name="fullName" placeholder="Full Name" required><br>
    <input type="text" name="phone" placeholder="Phone Number" required><br>
    <textarea type="text" name="address" placeholder="Address" required ></textarea>  <br>
    <input type = "text" name="email" placeholder = "email-id" required> <br>
 </div>
 <p>
     <h4>Payment Method</h4>

  <input type="radio" name="paymentMethod" value="COD" required>
  <label>Cash on Delivery</label><br><br>

  <input type="radio" name="paymentMethod" value="UPI">
  <label>UPI</label><br><br>

  <input type="radio" name="paymentMethod" value="CARD">
  <label>Debit / Credit Card</label><br><br>

  <input type="radio" name="paymentMethod" value="NET_BANKING">
  <label>Net Banking</label><br><br>

  <button type="submit">Confirm & Pay</button>
 </p>
 </form>
</body>